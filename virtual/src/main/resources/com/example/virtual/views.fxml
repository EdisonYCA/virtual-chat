<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.virtual.HelloController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints maxHeight="358.0" minHeight="10.0" prefHeight="358.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <GridPane prefHeight="203.0" prefWidth="600.0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="517.0" minWidth="10.0" prefWidth="515.0"/>
            <ColumnConstraints hgrow="NEVER" maxWidth="295.0" minWidth="10.0" prefWidth="85.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        </rowConstraints>

        <Button onAction="#sendMessage"
                mnemonicParsing="false" prefHeight="80.0" prefWidth="85.0"
                text="SEND" GridPane.columnIndex="1">
            <font>
                <Font name="Arial Bold" size="15.0"/>
            </font>
        </Button>

        <TextField fx:id="messageField" prefHeight="44.0" prefWidth="515.0" GridPane.vgrow="NEVER"/>
    </GridPane>

    <GridPane GridPane.valignment="BOTTOM">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Pane prefHeight="200.0" prefWidth="200.0"
              style="-fx-border-color: black; -fx-border-width: 2; -fx-border-style: solid;">
                <Label fx:id="messageSent"/>
        </Pane>
        <Pane prefHeight="200.0" prefWidth="200.0"
              style="-fx-border-color: black; -fx-border-style: solid; -fx-border-width: 2;"
              GridPane.columnIndex="1"/>
    </GridPane>
</GridPane>
