<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.virtual.HelloController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints maxHeight="358.0" minHeight="10.0" prefHeight="358.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="195.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <GridPane prefHeight="203.0" prefWidth="600.0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" maxWidth="517.0" minWidth="10.0" prefWidth="515.0"/>
            <ColumnConstraints hgrow="NEVER" maxWidth="295.0" minWidth="10.0" prefWidth="85.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
        </rowConstraints>
        <Button onAction="#sendMessage" prefHeight="80.0" prefWidth="85.0" text="SEND" GridPane.columnIndex="1">
            <font>
                <Font name="Arial Bold" size="15.0"/>
            </font>
        </Button>

        <TextField fx:id="messageField" onAction="#sendMessageKey" prefHeight="44.0" prefWidth="515.0"
                   GridPane.vgrow="NEVER"/>
    </GridPane>

    <GridPane GridPane.valignment="BOTTOM">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <ScrollPane prefHeight="362.0" prefWidth="600.0">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0"/>
        </ScrollPane>
        <VBox fx:id="messageDisplay" prefHeight="200.0" prefWidth="100.0"/>
    </GridPane>
</GridPane>
